<div class="container-fluid">
  <div class="row">
    <%= link_to "English", root_path(locale: :en) , class: "btn btn-primary"  %>
    <%= link_to "Portuguese", root_path(locale: :'pt-br'), class: "btn btn-primary" %>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-lg-3 offset-lg-1 col-md-12 exchange_box">
      <div class="row">
        <div class="logo-box">
          <%= image_tag '/logo.png', class: "img-responsive"%>
        </div>
      </div>
      <div class="row">
        <%= render "shared/exchange_box" %>
      </div>
    </div>
    <div class="col-lg-7 offset-lg-1 hidden-md-down title-box">
      <div class="row">
        <h2 class="title"><%= t('title') %></h2>
      </div>
      <div class="row">
        <h3 class="title"><%= t('subtitle') %></h3>
      </div>
    </div>
  </div>
</div>
