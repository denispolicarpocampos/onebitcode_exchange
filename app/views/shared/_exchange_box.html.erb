<div class="exchange_box">
  <div class="card">
    <div class="card-header text-center">
      <%= t('simulate') %>
    </div>
    <div class="card-block">
      <%= form_tag("/exchange", method: "post", id: "exchange_form") do %>
        <div class="local_currency">
          <div class="form-group">
            <p class="title"><%= t('from') %>
              <a href="#" class="btn swap-button">
                  <i class="fa fa-arrow-circle-down" aria-hidden="true"></i>
              </a>
            </p>
            <%= select_tag "currency", options_for_select(currency_select, "BRL"), class: "form-control", id: "currency" %>
          </div>
          <div class="form-group">
            <input type="number" name="quantity" id="quantity" class="form-control" placeholder="<%= t('quantity') %> ($10)" step="any" required>
          </div>
        </div>
        <div class="destination_currency">
          <div class="form-group">
            <p class="title"><%= t('to') %>
              <a href="#" class="btn swap-button">
                  <i class="fa fa-arrow-circle-up" aria-hidden="true"></i>
              </a>
            </p>
            <%= select_tag "currency_destination", options_for_select(currency_select, "EUR"), class: "form-control", id: "currency_destination"%>
          </div>
          <div class="form-group">
            <input type="text" id="result" name="result" class="form-control" placeholder="<%= t('result') %>" readonly>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
